{
  "manifest_version": 2,

  "name": "Blocktrail Bitcoin browser extension",
  "description": "This extension shows info for bitcoin and testnet addresses the current page",
  "version": "0.0.1",
  "author": "Oisin Conolly",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://api.blocktrail.com/"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["libs/jquery.qtip.min.css", "style.css"],
      "js": ["libs/jquery.js", "libs/jquery.qtip.min.js", "contentscript.js"]
    }
  ]
}