{
  "manifest_version": 2,

  "name": "Blocktrail Bitcoin browser extension",
  "description": "This extension shows info for bitcoin and testnet addresses the current page",
  "version": "0.0.1",
  "author": "Oisin Conolly",

  "browser_action": {
    "default_icon": "resources/icon-small.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "https://api.blocktrail.com/"
  ],
  "icons": {
    "16": "resources/icon-bitty.png",
    "48": "resources/icon-small.png",
    "128": "resources/icon-large.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": ["*://*.blocktrail.com/*"],
      "css": ["libs/jquery.qtip.min.css", "style.css"],
      "js": ["libs/jquery.js", "libs/jquery.qtip.min.js", "contentscript.js"]
    }
  ],
  "browser_action": {
    "default_title": "Blocktrail is awesome",
    "default_icon": "resources/icon-bitty.png"
  }
}